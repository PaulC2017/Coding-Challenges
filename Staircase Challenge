using System;
using System.Collections.Generic;
using System.IO;
using System.Linq;

class Solution {

    /*
     * Complete the staircase function below.
     
     new string('a', 2); // returns aa
     */
    static void staircase(int n) 
    {
        
        int spaces = n-1;
        int numOfHashes = 1;
        
        for (int i=0; i<n; i++)
        {
            Console.WriteLine(new String(' ', spaces) + new String('#', numOfHashes));
            spaces -=1;
            numOfHashes +=1;
        }
        
    }
    
    static void Main(string[] args) {
        int n = Convert.ToInt32(Console.ReadLine());

        staircase(n);
    }
}

